{
    "name": "nodejs-typescript-jest-eslint-boilerplate",
    "version": "1.0.0",
    "description": "My simple Boilerplate",
    "main": "src/app.ts",
    "scripts": {
        "start": "ts-node src/app.ts",
        "dev": "nodemon --watch 'src/' --exec 'ts-node src/app.ts' -e ts",
        "test": "jest --passWithNoTests --silent --noStackTrace --forceExit",
        "test:staged": "jest --passWithNoTests --silent --noStackTrace --forceExit",
        "test:coverage": "jest --passWithNoTests --silent --noStackTrace --forceExit --coverage",
        "pretest": "eslint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hpandelo/1TutorialPerDay.git"
    },
    "author": "Helcio R. Macedo Pandelo",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/hpandelo/1TutorialPerDay/issues"
    },
    "homepage": "https://github.com/hpandelo/1TutorialPerDay#readme",
    "keywords": [],
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "eslint": "^8.1.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.25.2",
        "git-commit-msg-linter": "^3.2.8",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^11.2.6",
        "ts-jest": "^27.0.7",
        "typescript": "^4.4.4"
    }
}