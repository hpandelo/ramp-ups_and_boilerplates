{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./apps/**/tsconfig.json", /* Check how to move to global */
        "tsconfigRootDir": "__dirname",
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "semi": ["error", "never"],
      "@typescript-eslint/semi": ["error", "never"],
      "no-console": "off",
      "no-plusplus": "off",
      "default-param-last": "off",
      "class-methods-use-this": "off",
      "import/prefer-default-export": "off"
    }
}
